<div class="home_box box">
  <h1>Caterwaul</h1>
  <% if !current_user %>
    <%= button_to "Sign In", new_user_session_path,  method: :get, class: "button", data: {turbo: false} %>
    <%= button_to "Sign Up", new_user_registration_path, method: :get, class: "button", data: {turbo: false} %>
